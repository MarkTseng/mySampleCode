KERNEL_DIR ?= /disk-b/Amlogic/amlogicMBOX-0526/kernel
CROSS_COMPILE ?= /disk-b/tools/amlogic/arm-2010q1/bin/arm-none-linux-gnueabi-
KERNEL_MAJOR_VERSION=2.6
export ARCH=arm

HOST_PLATFORM_SRC_DIR=amlogic
TRANSPORT?=ksdio
HOST=arm-none-linux-gnueabi

# CHIP VERSION : (CFG_NRX_600 | CFG_NRX_700)
PLATFORM_FLAGS+=-DCFG_NRX_600 -DAMLOGIC_8726M
PLATFORM_FLAGS+=-DFORCE_SYSCTL_SYSCALL_CHECK
#PLATFORM_FLAGS+=-DKSDIO_FORCE_CLOCK=50000000
#PLATFORM_FLAGS+=-DKSDIO_HIGH_SPEED
PLATFORM_FLAGS+=-DDE_LOAD_DEVICE_PARAMS=CFG_NOT_INCLUDED
PLATFORM_FLAGS+=-DDE_SHUTDOWN_ON_IFDOWN=CFG_OFF
PLATFORM_FLAGS+=-Wno-missing-field-initializers
# Enable Thread
PLATFORM_FLAGS+=-DUSE_THREAD_RX
PLATFORM_FLAGS+=-DUSE_THREAD_TX
PLATFORM_FLAGS+=-DDE_ENABLE_HT_RATES=CFG_ON

PLATFORM_FLAGS+=-DKSDIO_BLOCK_SIZE=128
#PLATFORM_FLAGS+=-DKSDIO_FW_DOWNLOAD_CLOCK=8000000

#CONFIG=release
