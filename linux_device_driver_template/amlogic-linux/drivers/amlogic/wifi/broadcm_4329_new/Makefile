# bcm4329
DHDCFLAGS = -DLINUX -DBCMDRIVER -DBCMDONGLEHOST -DDHDTHREAD -DBCMWPA2     \
	-DUNRELEASEDCHIP -Dlinux -DDHD_SDALIGN=64 -DMAX_HDR_READ=64           \
	-DDHD_FIRSTREAD=64 -DDHD_GPL -DDHD_SCHED -DBDC -DTOE \
	-DDHD_BCMEVENTS -DSHOW_EVENTS -DBCMSDIO -DBCMLXSDMMC \
	-DBCMPLATFORM_BUS -DOEM_ANDROID -DEMBEDDED_PLATFORM  \
	-DCONFIG_HAS_EARLYSUSPEND -DBCMWAPI_WPI\
	-DKEEP_ALIVE -DMMC_SDIO_ABORT -DDHD_DEBUG_TRAP \
	-DDHD_DEBUG -DSDTEST \
	-Idrivers/amlogic/wifi/broadcm_4329_new -Idrivers/amlogic/wifi/broadcm_4329_new/include

DHDCFLAGS += -DCSCAN
#	-DKEEP_ALIVE -DPNO_SUPPORT -DMMC_SDIO_ABORT -DDHD_DEBUG_TRAP \
#

DHDOFILES = dhd_linux.o linux_osl.o bcmutils.o dhd_common.o dhd_custom_gpio.o \
	wl_iw.o siutils.o sbutils.o aiutils.o hndpmu.o bcmwifi.o dhd_sdio.o   \
	dhd_linux_sched.o dhd_cdc.o bcmsdh_sdmmc.o bcmsdh.o bcmsdh_linux.o    \
	bcmsdh_sdmmc_linux.o

ifeq ($(CONFIG_BCM4329_WIFI_CONTROL_FUNC),y)
DHDCFLAGS += -DCONFIG_WIFI_CONTROL_FUNC
endif
ifeq ($(CONFIG_BCM4329_DHD_USE_STATIC_BUF),y)
DHDCFLAGS += -DDHD_USE_STATIC_BUF
endif
ifeq ($(CONFIG_BCM4329_HW_OOB),y)
DHDCFLAGS += -DHW_OOB -DCUSTOM_OOB_GPIO_NUM=INT_GPIO_4
endif
ifeq ($(CONFIG_BCM4329_OOB_INTR_ONLY),y)
DHDCFLAGS += -DOOB_INTR_ONLY -DCUSTOM_OOB_GPIO_NUM=INT_GPIO_4
else
DHDCFLAGS += -DSDIO_ISR_THREAD 
endif
ifeq ($(CONFIG_BCM4329_GET_CUSTOM_MAC_ENABLE),y)
DHDCFLAGS += -DGET_CUSTOM_MAC_ENABLE
endif

obj-$(CONFIG_SDIO_DHD_CDC_WIFI_4329_MODULE) += dhd.o
obj-$(CONFIG_SDIO_DHD_CDC_WIFI_4319_MODULE) += dhd.o
