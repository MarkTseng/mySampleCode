 1  /*
 2   * Illustrates the use of mpatrol's memory allocation tracing
 3   * tool.
 4   */


 7  #include "mpatrol/mtrace.h"


10  int main(void)
11  @{
12      void *p;

14      mtrace();
15      p = malloc(16);
16      free(p);
17      p = malloc(8);
18      muntrace();
19      return EXIT_SUCCESS;
20  @}
